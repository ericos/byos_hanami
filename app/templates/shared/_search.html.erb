<search>
  <%= tag.form(action: path, method: :get, class: "page-search") do %>
    <input id="search"
           name="query"
           value="<%= query %>"
           class="value"
           hx-get="<%= path %>"
           hx-trigger="search, keyup delay:200ms changed"
           hx-select="<%= pick %>"
           hx-target="<%= target %>"
           hx-swap="outerHTML"
           hx-push-url="true"
           hx-indicator=".page-loader"/>

      <div class="page-loader htmx-indicator"></div>
      <input type="submit" value="Search" class="button-accept"/>
      <%= link_to "Clear", path, class: "button-decline" %>
  <% end %>
</search>
